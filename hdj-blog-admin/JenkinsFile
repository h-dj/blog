pipeline {
    agent any
    stages {
        stage('拉取代码') {
            steps {
                echo "开始拉取代码: 位置：${WORKSPACE}"
                 script {
                        if(!fileExists("${WORKSPACE}/blog")){
                             sh """
                                    git clone git@github.com:h-dj/blog.git
                                    cd ${WORKSPACE}/blog
                                    git checkout develop
                                    git branch
                                """
                         }else{
                             sh """
                                    cd ${WORKSPACE}/blog
                                    git pull
                                    git branch
                                """
                         }
                }
                echo "开始拉取代码: 完成 "
            }
        }
        stage('构建') {
            steps {
                sh  """
                    cd ${WORKSPACE}/blog/hdj-blog-admin
                    npm install
                    npm run build:prod
                    """
            }
        }
        stage('发送至指定服务器') {
                     steps {
                          sh 'date'
                          echo "项目构建结果路径：${WORKSPACE}"
                          sh """
                             cd ${WORKSPACE}/blog/hdj-blog-admin
                             rsync -avu --progress  ./dist/**  ${user}@${host}:/home/blog/blog/nginx/www/admin
                             """
                          echo '发送成功'
                       }
               }
    }
    post {
            success {
                echo 'success'
            }
            unstable {
                echo 'I am unstable :/'
            }
            failure {
                echo 'failed'
            }
            changed {
                echo 'Things were different before...'
            }
        }
}
